@using Angular2MultiSPA
@using Angular2MultiSPA.ViewModels.Account
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper "*,Angular2MultiSPA"
@model LoginViewModel

<div class="jumbotron center-block">
    <h1>Login</h1>

    <form role="form" (submit)="login($event, email.value, password.value)">
        <form-entry for="Email"></form-entry>
        <form-entry for="Password"></form-entry>
        <button type="submit" class="btn btn-default">Submit</button>
        <a [routerLink]="['/signup']">Click here to Signup</a>
    </form>
</div>
