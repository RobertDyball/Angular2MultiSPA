@using Angular2MultiSPA
@using Angular2MultiSPA.ViewModels.Account
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper "*,Angular2MultiSPA"
@model RegisterViewModel

<div class="jumbotron center-block">
    <h1>Signup</h1>

    <form role="form" (submit)="signup($event, email.value, password.value, verifyPassword.value)">
        <tag-in for="Email"></tag-in>
        <tag-in for="Password"></tag-in>
        <tag-in for="VerifyPassword"></tag-in>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>
