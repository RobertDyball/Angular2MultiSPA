                <tr>
                    <td><pre>@{ Write(@" <tag-in bind-pa=""sampleData"" for=""PhoneNumber""></tag-in>"); }</pre></td>
                    <td><tag-in bind-pa="sampleData" for="PhoneNumber"></tag-in></td>
                </tr>
                <tr>
                    <td><pre>@{ Write(@" <tag-in bind-pa=""sampleData"" for=""Currency""></tag-in>"); }</pre></td>
                    <td><tag-in bind-pa="sampleData" for="Currency"></tag-in></td>
                </tr>
                <tr>
                    <td><pre>@{ Write(@" <tag-in bind-pa=""sampleData"" for=""Text""></tag-in>"); }</pre></td>
                    <td><tag-in bind-pa="sampleData" for="Text"></tag-in></td>
                </tr>
                <tr>
                    <td><pre>@{ Write(@"</div>"); }</pre></td>
                    <td></td>
                </tr>
            </table>
        </div>

    </div>
    <div *ngIf="sampleData != null">

