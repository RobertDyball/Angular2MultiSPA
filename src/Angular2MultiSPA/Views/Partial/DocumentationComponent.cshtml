@using Angular2MultiSPA.ViewModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper "*,Angular2MultiSPA"
@model SampleData

<style>
    table#code {
        border: 0px;
    }

        table#code tr th {
            font-style: normal;
            font-size: small;
        }

        table#code tr td {
            padding: 0px;
            padding-left: 10px;
            border: 0px;
            margin: 0px;
        }

            table#code tr td pre {
                padding: 0px;
                padding-right: 10px;
                border: 0px;
                margin: 0px;
                font-size: smaller;
            }
</style>

<div class="row">
    <div *ngIf="sampleData != null">

        <div class="col-md-12">
            <h4>Tag Helper For Data Input (read / write / edit), &lt;tag-in&gt;</h4>
            <table id="code">
                <tr>
                    <th>Server-side CSHTML before tag-helpers are applied:<br /><br /></th>
                    <th>Angular 2 generates this output into the client's browser:<br /><br /></th>
                </tr>
                <tr>
                    <td><pre>@{ Write(@"<div *ngIf=""sampleData != null"">"); }</pre></td>
                    <td></td>
                </tr>
                <tr>
                    <td><pre>@{ Write(@" <tag-in bind-pa=""sampleData"" for=""DateTimeVar""></tag-in>"); }</pre></td>
                    <td><tag-in bind-pa="sampleData" for="DateTimeVar"></tag-in></td>
                </tr>
                <tr>
                    <td><pre>@{ Write(@" <tag-in bind-pa=""sampleData"" for=""DateVar""></tag-in>"); }</pre></td>
                    <td><tag-in bind-pa="sampleData" for="DateVar"></tag-in></td>
                </tr>
                <tr>
                    <td><pre>@{ Write(@" <tag-in bind-pa=""sampleData"" for=""TimeVar""></tag-in>"); }</pre></td>
                    <td><tag-in bind-pa="sampleData" for="TimeVar"></tag-in></td>
                </tr>
                <tr>
                    <td><pre>@{ Write(@" <tag-in bind-pa=""sampleData"" for=""Duration""></tag-in>"); }</pre></td>
                    <td><tag-in bind-pa="sampleData" for="Duration"></tag-in></td>
